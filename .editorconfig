# https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.lua]
quote_style = double
call_arg_parentheses = remove_table_only

[*.md]
trim_trailing_whitespace = false
